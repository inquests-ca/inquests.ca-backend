{
  "name": "inquests-ca-backend",
  "version": "0.0.1",
  "description": "Backend for inquests.ca, deployed on Heroku.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inquests-ca/inquests.ca-backend.git"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/node": "^14.17.4",
    "@vendia/serverless-express": "^4.10.4",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.12",
    "@types/http-errors": "^1.8.0",
    "@types/joi": "^14.3.4",
    "@types/lodash": "^4.14.170",
    "@types/morgan": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^6.15.0",
    "prettier": "^2.3.2",
    "tsc-watch": "^4.4.0",
    "typeorm-model-generator": "^0.4.5",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "start:dev": "tsc-watch --onSuccess \"npm start\"",
    "start": "node ./dist/index.local.js",
    "build": "tsc"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "ignorePatterns": [
      "dist/"
    ],
    "rules": {
      "no-useless-return": "warn",
      "prefer-const": [
        "warn",
        {
          "destructuring": "all"
        }
      ],
      "prefer-template": "warn"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
