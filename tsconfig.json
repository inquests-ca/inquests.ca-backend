{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
